{
  "presets": [
    // webpack understands the native import syntax, and uses it for tree shaking
    ["es2015", {
      "modules": false
    }],
    // Transpile React components to JavaScript
    "react",
    "stage-0"
  ],
  "env": {
    "development": {
      "plugins": [
        // Enables React code to work with HMR.
        "react-hot-loader/babel"
      ]
    },
    "production": {
      "plugins": [
        "transform-runtime"
      ]
    },
    "test": {
      "presets": [
        "es2015",
        "react",
        "stage-0"
      ]
    }
  }
}